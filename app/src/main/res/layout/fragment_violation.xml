<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:orientation="vertical"
    tools:context="mad.com.its02.fragment.ViolationFragment">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e5e5e5"
        android:gravity="center">

        <Button
            android:id="@+id/btn_violate_video"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="违章视频"/>
        <Button
            android:id="@+id/btn_violate_picture"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="违章图片"/>
        <Button
            android:id="@+id/btn_violate_analysis1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="数据分析1"/>
        <Button
            android:id="@+id/btn_violate_analysis2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="数据分析2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违章查询"
            android:id="@+id/btn_violate_query"
            />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/violate_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>