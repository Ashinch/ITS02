<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="mad.com.its02.fragment.RoadLiveFragment">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1号道路："
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_road_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="爆表"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:background="@color/road_baobiao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2号道路："
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_road_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="爆表"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:background="@color/road_baobiao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3号道路："
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_road_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="爆表"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:background="@color/road_baobiao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4号道路："
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_road_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="爆表"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:background="@color/road_baobiao"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5号道路："
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_road_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="爆表"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:background="@color/road_baobiao"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>
